  volume       = "??",
  number       = "??",
  pages        = "??",
  url          = "??",

  textVersion  =
  paste("Sascha Bub, Thorsten Schad (2019).",
        "XDrift - An R Package to Simulate Spatially Explicit",
        "Pesticide Spray-drift Exposure of Non-Target-Species",
        "Habitats at Landscape Scales",
        "SoftwareX, ??(??), ??-??.",
        "URL ??.")
)
